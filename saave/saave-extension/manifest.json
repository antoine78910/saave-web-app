{
  "manifest_version": 3,
  "name": "Saave",
  "version": "1.0.0",
  "description": "Sauvegarde intelligente de liens.",
  "action": {
    "default_title": "Ajouter Ã  Saave",
    "default_icon": {
      "16": "icons/favicon.png",
      "48": "icons/favicon.png",
      "128": "icons/favicon.png"
    }
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "https://saave.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}