{
  "manifest_version": 3,
  "name": "Saave",
  "version": "1.0.1",
  "description": "Sauvegarde intelligente de liens.",
  "action": {
    "default_title": "Ajouter Ã  Saave",
    "default_icon": {
      "16": "icons/favicon.png",
      "48": "icons/favicon.png",
      "128": "icons/favicon.png"
    }
  },
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://saave.io/*",
      "https://www.saave.io/*",
      "https://*.saave.io/*"
    ]
  },
  "background": {
    "service_worker": "background-sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}